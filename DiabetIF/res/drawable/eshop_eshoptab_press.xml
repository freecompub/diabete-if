<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="@dimen/eshop_eshoptab_space"
        android:right="@dimen/eshop_eshoptab_space">

        <shape android:shape="rectangle">

            <gradient
                android:angle="-90"
                android:endColor="@color/eshop_color_dark"
                android:startColor="@color/eshop_color_medium" />
        </shape>
    </item>
    <!-- draw tab background -->

    <item
        android:bottom="26sp"
        android:top="1sp">

        <shape android:shape="rectangle">

            <solid android:color="@color/eshop_color_transparent" />
        </shape>
    </item>

    <item
        android:bottom="2sp"
        android:left="2sp"
        android:right="2sp"
        android:top="3sp">

        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="@dimen/eshop_eshoptab_corner_radius"
                android:bottomRightRadius="@dimen/eshop_eshoptab_corner_radius"
                android:topLeftRadius="@dimen/eshop_eshoptab_corner_radius"
                android:topRightRadius="@dimen/eshop_eshoptab_corner_radius" />

            <gradient
                android:angle="-90"
                android:endColor="#20ffffff"
                android:startColor="#20ffffff" />
        </shape>
    </item>

</layer-list>